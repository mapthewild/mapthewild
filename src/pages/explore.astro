---
import Layout from '../layouts/Layout.astro';
import BlogFogMap from '../components/BlogFogMap.tsx';
---

<Layout title="Explore - Map the Wild">
  <div class="relative w-full h-screen bg-parchment overflow-hidden">
    <!-- Parchment texture and topo lines -->
    <div class="topo-overlay"></div>

    <!-- Back button -->
    <a
      href="/mapthewild/"
      class="absolute top-6 left-6 z-50 px-4 py-2 text-sm rounded-lg backdrop-blur-sm flex items-center gap-2 transition-all back-button"
    >
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <circle cx="12" cy="12" r="10"/>
        <path d="M12 2v4M12 18v4M2 12h4M18 12h4"/>
        <path d="M12 8l2 4-2 4-2-4z" fill="currentColor" stroke="none"/>
      </svg>
      <span>Back to Blog</span>
    </a>

    <!-- Fogmap component -->
    <div class="absolute inset-0 flex items-center justify-center pt-16">
      <BlogFogMap client:load />
    </div>

    <!-- Corner compass roses -->
    <div class="compass-corner top-6 right-6"></div>
    <div class="compass-corner bottom-6 left-6"></div>

    <!-- Vignette effect -->
    <div class="vignette-overlay"></div>
  </div>
</Layout>

<style>
  .bg-parchment {
    background-color: var(--color-parchment);
    background-image:
      url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.04'/%3E%3C/svg%3E");
  }

  .back-button {
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-ink);
    border: 2px solid var(--color-grid);
  }

  .back-button:hover {
    background: var(--color-white);
    border-color: var(--color-ochre);
  }

  .back-button svg {
    color: var(--color-ochre);
  }

  .topo-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 40px,
        rgba(112, 66, 20, 0.04) 40px,
        rgba(112, 66, 20, 0.04) 41px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 40px,
        rgba(112, 66, 20, 0.04) 40px,
        rgba(112, 66, 20, 0.04) 41px
      );
  }

  .vignette-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 40;
    background: radial-gradient(ellipse at center, transparent 30%, rgba(112, 66, 20, 0.15) 100%);
  }

  .compass-corner {
    position: absolute;
    width: 48px;
    height: 48px;
    z-index: 45;
    opacity: 0.3;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg' fill='none' stroke='%23704214' stroke-width='1'%3E%3Ccircle cx='12' cy='12' r='10'/%3E%3Cpath d='M12 2v4M12 18v4M2 12h4M18 12h4'/%3E%3Cpath d='M12 8l2 4-2 4-2-4z' fill='%23c9a227' stroke='none'/%3E%3C/svg%3E");
    background-size: contain;
    background-repeat: no-repeat;
  }
</style>
