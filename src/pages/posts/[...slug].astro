---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const islandMeta: Record<string, string> = {
    map: 'Map',
    territory: 'Territory',
    nowbrary: 'Nowbrary'
  }

  const posts = await getCollection('posts');
  const publishedPosts = posts
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return publishedPosts.map((post) => {
    const primaryIsland = post.data.islands?.[0]

    let previousPost = null
    let nextPost = null
    let islandLink = null

    if (primaryIsland) {
      // Filter to posts in the same island
      const islandPosts = publishedPosts.filter(p =>
        p.data.islands?.includes(primaryIsland)
      )
      const currentIndex = islandPosts.findIndex(p => p.slug === post.slug)

      previousPost = islandPosts[currentIndex + 1] || null
      nextPost = islandPosts[currentIndex - 1] || null

      // At boundaries, link to island index
      islandLink = {
        name: islandMeta[primaryIsland] || primaryIsland,
        href: `/mapthewild/islands/${primaryIsland}`
      }
    } else {
      // No island: chronological nav across all posts
      const currentIndex = publishedPosts.findIndex(p => p.slug === post.slug)
      previousPost = publishedPosts[currentIndex + 1] || null
      nextPost = publishedPosts[currentIndex - 1] || null
    }

    return {
      params: { slug: post.slug },
      props: {
        post,
        previousPost,
        nextPost,
        islandLink,
      },
    }
  });
}

const { post, previousPost, nextPost, islandLink } = Astro.props;
const { Content } = await post.render();
---

<Layout>
  <article class="max-w-3xl mx-auto px-6 md:px-8 py-16 md:py-24">
    <Breadcrumbs
      items={[
        { label: 'Home', href: '/mapthewild/' },
        { label: 'Posts', href: '/mapthewild/posts' },
        { label: post.data.title }
      ]}
    />

    <header class="mb-12">
      <time class="article-date">
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        }).toUpperCase()}
      </time>

      <h1 class="article-title">
        {post.data.title}
      </h1>

      {post.data.description && (
        <p class="article-subtitle">
          {post.data.description}
        </p>
      )}
    </header>

    <div class="prose">
      <Content />
    </div>

    <nav class="flex justify-between items-start gap-8 mt-16 pt-8 border-t border-grid">
      {previousPost ? (
        <a
          href={`/mapthewild/posts/${previousPost.slug}`}
          class="flex-1 group text-left hover-shift hover-shift-ochre p-3 -m-3 rounded-md"
        >
          <div class="text-sm text-ink-muted mb-2">← Previous</div>
          <div class="text-lg text-ink-light group-hover:text-ochre transition-colors line-clamp-2">
            {previousPost.data.title}
          </div>
        </a>
      ) : islandLink ? (
        <a
          href={islandLink.href}
          class="flex-1 group text-left hover-shift hover-shift-verdigris p-3 -m-3 rounded-md"
        >
          <div class="text-sm text-ink-muted mb-2">← Explore</div>
          <div class="text-lg text-ink-light group-hover:text-verdigris transition-colors">
            {islandLink.name}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}

      {nextPost ? (
        <a
          href={`/mapthewild/posts/${nextPost.slug}`}
          class="flex-1 group text-right hover-shift hover-shift-ochre p-3 -m-3 rounded-md"
        >
          <div class="text-sm text-ink-muted mb-2">Next →</div>
          <div class="text-lg text-ink-light group-hover:text-ochre transition-colors line-clamp-2">
            {nextPost.data.title}
          </div>
        </a>
      ) : islandLink ? (
        <a
          href={islandLink.href}
          class="flex-1 group text-right hover-shift hover-shift-verdigris p-3 -m-3 rounded-md"
        >
          <div class="text-sm text-ink-muted mb-2">Explore →</div>
          <div class="text-lg text-ink-light group-hover:text-verdigris transition-colors">
            {islandLink.name}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}
    </nav>
  </article>
</Layout>

<style>
  /* Article header styles */
  .article-date {
    font-size: 13px;
    color: var(--color-ink-muted);
    letter-spacing: 1px;
    margin-bottom: var(--space-sm);
    display: block;
  }

  .article-title {
    font-size: 36px;
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-ochre);
    margin-bottom: var(--space-md);
    font-family: 'Fraunces', Georgia, serif;
    font-variation-settings: 'WONK' 1, 'SOFT' 50;
  }

  .article-subtitle {
    font-size: 18px;
    color: var(--color-ink-muted);
    line-height: 1.5;
  }

  /* Prose styles - warm light treatment */
  .prose {
    font-size: 16px;
    line-height: 1.8;
    color: var(--color-ink-light);
    font-family: Georgia, 'Times New Roman', serif;
  }

  .prose :global(p) {
    margin-bottom: var(--space-md);
  }

  .prose :global(h2) {
    font-size: 24px;
    font-weight: 400;
    color: var(--color-ink);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    font-family: 'Fraunces', Georgia, serif;
    font-variation-settings: 'WONK' 1, 'SOFT' 50;
  }

  .prose :global(h3) {
    font-size: 18px;
    font-weight: 700;
    color: var(--color-ink);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
    font-family: 'Fraunces', Georgia, serif;
  }

  .prose :global(ul), .prose :global(ol) {
    margin-left: var(--space-lg);
    margin-top: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .prose :global(li) {
    margin-bottom: var(--space-sm);
  }

  .prose :global(a) {
    color: var(--color-ochre);
    text-decoration: none;
    border-bottom: 1px solid rgba(196, 160, 53, 0.4);
    transition: all 0.2s;
  }

  .prose :global(a:hover) {
    color: var(--color-ochre-dark);
    border-bottom-color: var(--color-ochre-dark);
  }

  .prose :global(strong) {
    color: var(--color-ink);
    font-weight: 600;
  }

  .prose :global(em) {
    font-style: italic;
  }

  /* Blockquotes - dusty rose border (the "wrong" color) */
  .prose :global(blockquote) {
    border-left: 3px solid var(--color-rose);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--color-ink-light);
  }

  /* Code blocks */
  .prose :global(code) {
    background: var(--color-parchment-dark);
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
    font-size: 14px;
    color: var(--color-ink);
  }

  .prose :global(pre) {
    background: var(--color-ink);
    color: var(--color-parchment);
    padding: var(--space-md);
    border-radius: 6px;
    overflow-x: auto;
    margin: var(--space-lg) 0;
  }

  .prose :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  /* Images */
  .prose :global(img) {
    border-radius: 8px;
    margin: var(--space-lg) 0;
  }

  /* Horizontal rules */
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-grid);
    margin: var(--space-xl) 0;
  }
</style>
