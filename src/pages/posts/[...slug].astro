---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import StackingPanes from '../../components/StackingPanes';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const publishedPosts = posts.filter(post => !post.data.draft);
  return publishedPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout>
  <article class="max-w-3xl mx-auto px-6 md:px-8 py-16 md:py-24">
    <header class="mb-12">
      <time class="text-sm text-gray-500 uppercase tracking-wide">
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>

      <h1 class="text-4xl md:text-5xl font-bold text-white mt-3 mb-4">
        {post.data.title}
      </h1>

      {post.data.description && (
        <p class="text-xl text-gray-400 leading-relaxed">
          {post.data.description}
        </p>
      )}
    </header>

    <div class="prose prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </article>

  <StackingPanes client:load />
</Layout>

<style>
  .prose {
    @apply text-gray-300 font-serif;
  }

  .prose :global(p) {
    @apply mb-6 leading-relaxed;
  }

  .prose :global(h2) {
    @apply text-2xl font-semibold text-white mt-12 mb-4;
  }

  .prose :global(h3) {
    @apply text-xl font-semibold text-white mt-8 mb-3;
  }

  .prose :global(ul), .prose :global(ol) {
    @apply ml-6 space-y-2 my-6;
  }

  .prose :global(a) {
    @apply text-purple-400 hover:text-purple-300 underline decoration-purple-400/50 transition-colors;
  }

  .prose :global(code) {
    @apply bg-gray-800 px-2 py-1 rounded text-purple-300 text-sm;
  }

  .prose :global(pre) {
    @apply bg-gray-900 p-4 rounded-lg overflow-x-auto my-6;
  }

  .prose :global(pre code) {
    @apply bg-transparent p-0;
  }

  .prose :global(strong) {
    @apply text-white font-semibold;
  }

  .prose :global(blockquote) {
    @apply border-l-4 border-purple-500 pl-4 italic text-gray-400 my-6;
  }
</style>
