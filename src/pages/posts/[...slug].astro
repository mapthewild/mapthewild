---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const islandMeta: Record<string, string> = {
    map: 'Map',
    territory: 'Territory',
    nowbrary: 'Nowbrary'
  }

  const posts = await getCollection('posts');
  const publishedPosts = posts
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return publishedPosts.map((post) => {
    const primaryIsland = post.data.islands?.[0]

    let previousPost = null
    let nextPost = null
    let islandLink = null

    if (primaryIsland) {
      // Filter to posts in the same island
      const islandPosts = publishedPosts.filter(p =>
        p.data.islands?.includes(primaryIsland)
      )
      const currentIndex = islandPosts.findIndex(p => p.slug === post.slug)

      previousPost = islandPosts[currentIndex + 1] || null
      nextPost = islandPosts[currentIndex - 1] || null

      // At boundaries, link to island index
      islandLink = {
        name: islandMeta[primaryIsland] || primaryIsland,
        href: `/mapthewild/islands/${primaryIsland}`
      }
    } else {
      // No island: chronological nav across all posts
      const currentIndex = publishedPosts.findIndex(p => p.slug === post.slug)
      previousPost = publishedPosts[currentIndex + 1] || null
      nextPost = publishedPosts[currentIndex - 1] || null
    }

    return {
      params: { slug: post.slug },
      props: {
        post,
        previousPost,
        nextPost,
        islandLink,
      },
    }
  });
}

const { post, previousPost, nextPost, islandLink } = Astro.props;
const { Content } = await post.render();
---

<Layout>
  <article class="max-w-3xl mx-auto px-6 md:px-8 py-16 md:py-24">
    <Breadcrumbs
      items={[
        { label: 'Home', href: '/mapthewild/' },
        { label: 'Posts', href: '/mapthewild/posts' },
        { label: post.data.title }
      ]}
    />

    <header class="mb-12">
      <time class="text-sm text-gray-500 uppercase tracking-wide">
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>

      <h1 class="text-4xl md:text-5xl font-bold text-white mt-3 mb-4">
        {post.data.title}
      </h1>

      {post.data.description && (
        <p class="text-xl text-gray-400 leading-relaxed">
          {post.data.description}
        </p>
      )}
    </header>

    <div class="prose prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <nav class="flex justify-between items-start gap-8 mt-16 pt-8 border-t border-gray-800">
      {previousPost ? (
        <a
          href={`/mapthewild/posts/${previousPost.slug}`}
          class="flex-1 group text-left"
        >
          <div class="text-sm text-gray-500 mb-2">← Previous</div>
          <div class="text-lg text-gray-300 group-hover:text-purple-400 transition-colors line-clamp-2">
            {previousPost.data.title}
          </div>
        </a>
      ) : islandLink ? (
        <a
          href={islandLink.href}
          class="flex-1 group text-left"
        >
          <div class="text-sm text-gray-500 mb-2">← Explore</div>
          <div class="text-lg text-gray-300 group-hover:text-purple-400 transition-colors">
            {islandLink.name}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}

      {nextPost ? (
        <a
          href={`/mapthewild/posts/${nextPost.slug}`}
          class="flex-1 group text-right"
        >
          <div class="text-sm text-gray-500 mb-2">Next →</div>
          <div class="text-lg text-gray-300 group-hover:text-purple-400 transition-colors line-clamp-2">
            {nextPost.data.title}
          </div>
        </a>
      ) : islandLink ? (
        <a
          href={islandLink.href}
          class="flex-1 group text-right"
        >
          <div class="text-sm text-gray-500 mb-2">Explore →</div>
          <div class="text-lg text-gray-300 group-hover:text-purple-400 transition-colors">
            {islandLink.name}
          </div>
        </a>
      ) : (
        <div class="flex-1"></div>
      )}
    </nav>
  </article>
</Layout>

<style>
  .prose {
    @apply text-gray-300 font-serif;
  }

  .prose :global(p) {
    @apply mb-6 leading-relaxed;
  }

  .prose :global(h2) {
    @apply text-2xl font-semibold text-white mt-12 mb-4;
  }

  .prose :global(h3) {
    @apply text-xl font-semibold text-white mt-8 mb-3;
  }

  .prose :global(ul), .prose :global(ol) {
    @apply ml-6 space-y-2 my-6;
  }

  .prose :global(a) {
    @apply text-purple-400 hover:text-purple-300 underline decoration-purple-400/50 transition-colors;
  }

  .prose :global(code) {
    @apply bg-gray-800 px-2 py-1 rounded text-purple-300 text-sm;
  }

  .prose :global(pre) {
    @apply bg-gray-900 p-4 rounded-lg overflow-x-auto my-6;
  }

  .prose :global(pre code) {
    @apply bg-transparent p-0;
  }

  .prose :global(strong) {
    @apply text-white font-semibold;
  }

  .prose :global(blockquote) {
    @apply border-l-4 border-purple-500 pl-4 italic text-gray-400 my-6;
  }
</style>
