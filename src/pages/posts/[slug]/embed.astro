---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const publishedPosts = posts.filter(post => !post.data.draft);
  return publishedPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{post.data.title}</title>
    <style>
      *, *::before, *::after {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        padding: 1.5rem;
        font-family: system-ui, -apple-system, sans-serif;
        background: #0a0a0f;
        color: #d1d5db;
        font-size: 15px;
        line-height: 1.7;
      }

      header {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #1f2937;
      }

      time {
        font-size: 12px;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      h1 {
        font-size: 1.375rem;
        font-weight: 700;
        color: white;
        margin: 0.5rem 0;
        line-height: 1.3;
      }

      .description {
        font-size: 15px;
        color: #9ca3af;
        margin-top: 0.5rem;
      }

      .prose p {
        margin: 0 0 1.25em 0;
      }

      .prose h2 {
        font-size: 1.125rem;
        font-weight: 600;
        color: white;
        margin: 2em 0 0.75em 0;
      }

      .prose h3 {
        font-size: 1rem;
        font-weight: 600;
        color: white;
        margin: 1.5em 0 0.5em 0;
      }

      .prose ul, .prose ol {
        margin: 1em 0 1em 1.5em;
      }

      .prose li {
        margin-bottom: 0.5em;
      }

      .prose a {
        color: #a78bfa;
        text-decoration: underline;
      }

      .prose a:hover {
        color: #c4b5fd;
      }

      .prose strong {
        color: white;
        font-weight: 600;
      }

      .prose em {
        color: #9ca3af;
      }

      .prose blockquote {
        border-left: 3px solid #7c3aed;
        padding-left: 1em;
        margin: 1em 0;
        color: #9ca3af;
        font-style: italic;
      }

      .prose code {
        background: #1f2937;
        padding: 0.125em 0.375em;
        border-radius: 4px;
        color: #a78bfa;
        font-size: 0.9em;
      }

      .bracket-link {
        color: #60a5fa;
        cursor: pointer;
        text-decoration: none;
      }

      .bracket-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <article>
      <header>
        <time>
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>

        <h1>{post.data.title}</h1>

        {post.data.description && (
          <p class="description">
            {post.data.description}
          </p>
        )}
      </header>

      <div class="prose">
        <Content />
      </div>
    </article>
  </body>
</html>
