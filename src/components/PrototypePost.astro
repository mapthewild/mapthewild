---
/**
 * Prototype Post Template Component
 *
 * Reusable template for showcasing interactive prototypes/tools.
 * Provides consistent structure for prototype posts.
 *
 * Usage in MDX:
 *
 * import PrototypePost from '../../components/PrototypePost.astro'
 *
 * <PrototypePost
 *   title="Seven Year Career Navigator"
 *   artifactId="7year-app"
 *   artifactLabel="Seven Year Navigator"
 *   builtDate="December 2024"
 *   status="Complete"
 *   tagline="A career assessment tool built on Peter Weddle's research about career phase transitions"
 *   projectUrl="https://github.com/yourusername/7year"
 * />
 */

interface Props {
  // Basic info
  title: string
  tagline: string

  // Artifact embed (optional - for interactive demos)
  artifactId?: string
  artifactLabel?: string

  // Project metadata
  builtDate?: string
  status?: 'Complete' | 'In Progress' | 'Experimental'
  projectUrl?: string

  // Content slots will be passed as children
}

const {
  title,
  tagline,
  artifactId,
  artifactLabel,
  builtDate,
  status = 'Complete',
  projectUrl
} = Astro.props
---

<div class="prototype-showcase">
  <!-- Header Section -->
  <header class="mb-12 pb-8 border-b" style="border-color: var(--color-grid);">
    <div class="flex flex-wrap items-center gap-3 mb-4">
      <span class="tag tag-ochre">
        Prototype
      </span>
      {status && (
        <span class="tag tag-verdigris">
          {status}
        </span>
      )}
      {builtDate && (
        <span class="text-sm" style="color: var(--color-ink-muted);">
          Built {builtDate}
        </span>
      )}
    </div>

    <p class="text-xl leading-relaxed" style="color: var(--color-ink-light);">
      {tagline}
    </p>
  </header>

  <!-- Interactive Demo Section (if artifact provided) -->
  {artifactId && artifactLabel && (
    <section class="mb-12">
      <h2 class="text-2xl font-display mb-4" style="color: var(--color-ink);">Try It</h2>
      <p class="mb-6" style="color: var(--color-ink-light);">
        Click to open the [[{artifactLabel}:{artifactId}]] in an interactive panel.
      </p>
    </section>
  )}

  <!-- Main Content (passed as slot) -->
  <div class="prototype-content prose prose-lg max-w-none">
    <slot />
  </div>

  <!-- Footer Section -->
  <footer class="mt-12 pt-8 border-t" style="border-color: var(--color-grid);">
    <div class="flex flex-col sm:flex-row gap-4 justify-between items-start sm:items-center">
      {projectUrl && (
        <a
          href={projectUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 transition-colors"
          style="color: var(--color-ochre);"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View Source Code
        </a>
      )}

      <div class="text-sm" style="color: var(--color-ink-muted);">
        Part of the <a href="/mapthewild/posts" style="color: var(--color-ochre);">Map the Wild</a> prototype series
      </div>
    </div>
  </footer>
</div>

<style>
  .prototype-showcase {
    @apply relative;
  }

  .prototype-content :global(h2) {
    font-size: 24px;
    font-family: 'Fraunces', Georgia, serif;
    font-variation-settings: 'WONK' 1, 'SOFT' 50;
    color: var(--color-ink);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .prototype-content :global(h3) {
    font-size: 18px;
    font-family: 'Fraunces', Georgia, serif;
    font-weight: 700;
    color: var(--color-ink);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .prototype-content :global(p) {
    color: var(--color-ink-light);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .prototype-content :global(ul),
  .prototype-content :global(ol) {
    color: var(--color-ink-light);
    margin-bottom: var(--space-lg);
  }

  .prototype-content :global(li) {
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }

  .prototype-content :global(strong) {
    color: var(--color-ink);
    font-weight: 600;
  }

  .prototype-content :global(blockquote) {
    border-left: 4px solid var(--color-rose);
    padding-left: var(--space-md);
    font-style: italic;
    color: var(--color-ink-muted);
    margin: var(--space-lg) 0;
  }

  .prototype-content :global(code) {
    color: var(--color-ochre);
    background: var(--color-parchment-dark);
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 14px;
  }

  .prototype-content :global(pre) {
    background: var(--color-parchment-dark);
    padding: var(--space-md);
    border-radius: 8px;
    overflow-x: auto;
    margin: var(--space-lg) 0;
  }

  .prototype-content :global(a) {
    color: var(--color-ochre);
    text-decoration: underline;
    text-decoration-color: rgba(196, 160, 53, 0.3);
    transition: color 0.2s;
  }

  .prototype-content :global(a:hover) {
    color: var(--color-ochre-dark);
  }

  /* Section dividers */
  .prototype-content :global(h2) {
    border-top: 1px solid var(--color-grid);
    padding-top: var(--space-xl);
  }

  .prototype-content :global(h2:first-of-type) {
    border-top: none;
    padding-top: 0;
  }
</style>
