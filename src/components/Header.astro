---
const currentPath = Astro.url.pathname;
---

<header class="max-w-3xl mx-auto px-6 py-8 border-b border-grid">
  <nav class="flex items-center justify-between">
    <a href="/mapthewild/" class="nav-logo group">
      <!-- Logo icon: ochre border, circled plus -->
      <span class="nav-logo-icon">âŠ•</span>
      <span class="nav-logo-text">Map the Wild</span>
    </a>

    <div class="flex gap-6">
      <a
        href="/mapthewild/"
        class={`nav-link ${currentPath === '/mapthewild/' ? 'active' : ''}`}
      >
        Home
      </a>
      <a
        href="/mapthewild/islands"
        class={`nav-link ${currentPath.startsWith('/mapthewild/islands') ? 'active' : ''}`}
      >
        Territories
      </a>
      <a
        href="/mapthewild/about"
        class={`nav-link ${currentPath === '/mapthewild/about' ? 'active' : ''}`}
      >
        About
      </a>
    </div>
  </nav>
</header>

<style>
  .nav-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--color-ink);
  }

  .nav-logo-icon {
    width: 24px;
    height: 24px;
    border: 1.5px solid var(--color-ochre);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: var(--color-ochre);
    transition: all 0.2s;
  }

  .nav-logo:hover .nav-logo-icon {
    background: var(--color-ochre-bg);
  }

  .nav-logo-text {
    font-size: 18px;
    font-family: 'Fraunces', Georgia, serif;
    font-variation-settings: 'WONK' 1, 'SOFT' 50;
  }

  .nav-link {
    font-size: 15px;
    text-decoration: none;
    color: var(--color-ink-light);
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--color-ink);
    text-decoration: none;
  }

  .nav-link.active {
    color: var(--color-ochre);
  }
</style>
